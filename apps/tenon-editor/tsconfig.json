{
  "extends": "../../tsconfig.json", // 继承根目录下通用配置
  "compilerOptions": {
    "target": "ES2015",
    "composite": true, // 用于帮助 TypeScript 快速确定引用工程的输出文件位置
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@tenon-features": ["./src/features"],
      "@tenon-features/*": ["./src/features/*"]
    }
  },
  "include": ["src", "config", "./*.d.ts"]
}
