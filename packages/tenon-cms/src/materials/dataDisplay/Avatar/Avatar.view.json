{
  "el": "a-avatar",
  "props": {
    "<BINDING>": "avatarConfig",
    "style": "avatarStyle"
  },
  "children": [
    {
      "el": "Text",
      "props": {
        "textValue": {
          "value": "{{this.author}}"
        },
        "textStyle": {
          "color": "inherit",
          "vertical-align": "middle"
        }
      }
    },
    {
      "el": "DynamicComponent",
      "props": {
        "is": "{{this.icon}}",
        "style": "avatarIconStyle"
      },
      "isSlot": true,
      "slotKey": "trigger-icon",
      "<IF>": "this.avatarConfig.withIcon"
    }
  ]
}
